<ScrollView xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/ScrollViewStyle"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        style="@style/LinearLayoutStyle"
        android:orientation="vertical"
        android:layout_margin="2dp">

       <include layout="@layout/stdudent_info_layout"/>

        <LinearLayout
            style="@style/LinearLayoutStyle"
            android:orientation="vertical"
            android:id="@+id/linearLayout_father">

            <android.support.v7.widget.CardView
                style="@style/cardViewStyle"
                app:cardCornerRadius="@dimen/mar_padd_5dp"
                app:cardElevation="@dimen/mar_padd_5dp">

                <RelativeLayout
                    style="@style/RelativeLayoutStyle"
                    android:id="@+id/fatherInfoLayoutClick">

                    <TextView
                        android:id="@+id/fatherInfoTextView"
                        style="@style/TextViewStyle1"
                        android:text="@string/father_information"
                        android:textSize="@dimen/text20sp"
                        android:layout_height="@dimen/dimen40dp"
                        android:textColor="@color/whitecolor"
                        android:background="@color/colorPrimary"/>

                    <ImageView
                        android:id="@+id/btnimageViewDownForFather"
                        style="@style/ImageviewStyle"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:visibility="gone"
                        android:src="@drawable/ic_expand_less_black_24dp"
                        android:contentDescription="@string/clickbutton" />

                    <ImageView
                        android:id="@+id/btnimageViewUpForFather"
                        style="@style/ImageviewStyle"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:contentDescription="@string/clickbutton"
                        android:src="@drawable/ic_expand_more_black_24dp"
                        android:visibility="visible" />

                </RelativeLayout>

                <LinearLayout
                    style="@style/LinearLayoutStyle"
                    android:id="@+id/layoutForFather"
                    android:orientation="vertical"
                    android:visibility="visible"
                    android:layout_marginTop="40dp"
                    android:padding="@dimen/mar_padd_5dp">

                    <in.varadhismartek.pathshalaerp.CircleImageView
                        android:id="@+id/fatherImage"
                        style="@style/CircleImageViewStyle"
                        android:contentDescription="@string/studentimage"
                        android:background="@drawable/attach2"
                        android:layout_marginStart="@dimen/mar_padd_5dp"
                        />

                    <LinearLayout
                        style="@style/LinearLayoutStyle"
                        android:orientation="vertical"
                        android:baselineAligned="false"
                        android:layout_marginTop="@dimen/mar_padd_5dp">

                        <android.support.design.widget.TextInputLayout
                            style="@style/TextInputLayout">

                            <EditText
                                android:id="@+id/editText_fatherName"
                                style="@style/EditTextStyle"
                                android:hint="@string/father_name"
                                android:inputType="textCapSentences"
                                android:maxLength="25"
                                android:digits="@string/alphabet"/>

                        </android.support.design.widget.TextInputLayout>

                        <android.support.design.widget.TextInputLayout
                            style="@style/TextInputLayout">

                            <EditText
                                android:id="@+id/editText_FatherMiddleName"
                                style="@style/EditTextStyle"
                                android:hint="@string/middle_name"
                                android:maxLength="25"
                                android:inputType="textCapSentences"

                                android:digits="@string/alphabet"/>

                        </android.support.design.widget.TextInputLayout>


                        <android.support.design.widget.TextInputLayout
                            style="@style/TextInputLayout">

                            <EditText
                                android:id="@+id/editText_FatherLastName"
                                style="@style/EditTextStyle"
                                android:hint="@string/last_name"
                                android:maxLength="25"
                                android:inputType="textCapSentences"

                                android:digits="@string/alphabet"/>

                        </android.support.design.widget.TextInputLayout>


                    </LinearLayout>

                    <LinearLayout
                        style="@style/LinearLayoutStyle"
                        android:orientation="horizontal">


                        <android.support.design.widget.TextInputLayout
                            style="@style/TextInputLayout"
                            android:layout_weight="1"
                            android:layout_width="0dp">

                            <EditText
                                android:id="@+id/editText_fatherAge"
                                style="@style/EditTextStyle"
                                android:inputType="number"
                                android:hint="@string/select_date_of_birth"/>

                        </android.support.design.widget.TextInputLayout>

                        <ImageView
                            style="@style/ImageviewStyle"
                            android:id="@+id/calendarFather"
                            android:src="@drawable/ic_calendar"
                            android:visibility="visible"
                            android:layout_gravity="center"
                            android:contentDescription="@string/calendarfordob" />

                    </LinearLayout>

                    <LinearLayout
                        style="@style/LinearLayoutStyle"
                        android:layout_height="65dp"
                        android:orientation="horizontal"
                        android:baselineAligned="false">

                        <LinearLayout
                            style="@style/LinearlayoutWeightStyle">

                            <android.support.design.widget.TextInputLayout
                                style="@style/TextInputLayout">

                                <EditText
                                    android:id="@+id/editText_fatherMobileNumber"
                                    android:inputType="number"
                                    style="@style/EditTextStyle"
                                    android:hint="@string/father_mobile_number"
                                    android:maxLength="10"/>

                            </android.support.design.widget.TextInputLayout>
                        </LinearLayout>

                        <LinearLayout
                            style="@style/LinearlayoutWeightStyle">
                            <Spinner
                                style="@style/SpinnerStyleA"
                                android:background="@drawable/custom_spinner_background"
                                android:spinnerMode="dropdown"
                                android:id="@+id/spinnerForQualification"
                                android:layout_gravity="center"/>


                        </LinearLayout>

                    </LinearLayout>


                    <LinearLayout
                        style="@style/LinearLayoutStyle"
                        android:layout_height="65dp"
                        android:orientation="horizontal"
                        android:baselineAligned="false">

                        <LinearLayout
                            style="@style/LinearlayoutWeightStyle">

                            <Spinner
                                style="@style/SpinnerStyleA"
                                android:background="@drawable/custom_spinner_background"
                                android:spinnerMode="dropdown"
                                android:id="@+id/spinnerForOccupation"
                                android:layout_gravity="center"
                                />

                        </LinearLayout>

                        <LinearLayout
                            style="@style/LinearlayoutWeightStyle">

                            <android.support.design.widget.TextInputLayout
                                style="@style/TextInputLayout">

                                <EditText
                                    android:id="@+id/editText_fatherDesignation"
                                    style="@style/EditTextStyle"
                                    android:hint="@string/designation"
                                    android:inputType="textCapSentences"
                                    android:digits="@string/alphabetSpace"
                                    android:focusable="false"
                                    android:focusableInTouchMode="false"
                                    android:maxLength="20"
                                    />

                            </android.support.design.widget.TextInputLayout>

                        </LinearLayout>

                    </LinearLayout>



                    <LinearLayout
                        style="@style/LinearLayoutStyle"
                        android:orientation="horizontal"
                        android:baselineAligned="false">

                        <android.support.design.widget.TextInputLayout
                            style="@style/TextInputLayout"
                            android:layout_weight="1"
                            android:layout_width="0dp">

                            <EditText
                                android:id="@+id/editText_fatherEmailId"
                                android:inputType="textEmailAddress"
                                style="@style/EditTextStyle"
                                android:hint="@string/father_email_id"
                                android:maxLength="40"
                                android:digits="@string/email"
                                />

                        </android.support.design.widget.TextInputLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            style="@style/LinearLayoutStyle"
                            android:orientation="horizontal"
                            android:baselineAligned="false">

                            <LinearLayout
                                style="@style/LinearlayoutWeightStyle"
                                android:layout_weight="0.8"
                                android:gravity="center"
                                >

                                <android.support.design.widget.TextInputLayout
                                    style="@style/TextInputLayout">

                                    <EditText
                                        android:id="@+id/editText_fatherAdharCardNumber"
                                        style="@style/EditTextStyle"
                                        android:hint="@string/aadhar_card_number"
                                        android:inputType="number"
                                        android:maxLength="12"
                                        tools:ignore="TooDeepLayout" />
                                </android.support.design.widget.TextInputLayout>
                            </LinearLayout>

                            <LinearLayout
                                style="@style/LinearlayoutWeightStyle"
                                android:layout_weight="0.5"
                                android:gravity="center"
                                android:orientation="horizontal">

                                <android.support.v7.widget.CardView
                                    android:layout_width="@dimen/dimen50dp"
                                    android:layout_height="70dp"
                                    android:layout_margin="@dimen/mar_padd_10dp">

                                    <ImageView
                                        android:id="@+id/fatherAadharFrontImageClick"
                                        android:layout_width="40dp"
                                        android:layout_height="match_parent"
                                        android:background="@color/whitecolor"
                                        android:src="@drawable/attach2"
                                        android:visibility="visible"
                                        android:layout_gravity="center"
                                        tools:ignore="ContentDescription" />


                                    <ImageView
                                        android:id="@+id/fatherAadharCardImageFront"
                                        android:layout_width="@dimen/dimen70dp"
                                        android:layout_height="match_parent"
                                        android:background="@color/whitecolor"
                                        android:visibility="gone"
                                        android:layout_gravity="center"
                                        tools:ignore="ContentDescription" />


                                </android.support.v7.widget.CardView>


                                <android.support.v7.widget.CardView
                                    android:layout_width="@dimen/dimen50dp"
                                    android:layout_height="70dp"
                                    android:layout_margin="@dimen/mar_padd_10dp">

                                    <ImageView
                                        android:id="@+id/fatherAadharBackImageClick"
                                        android:layout_width="40dp"
                                        android:layout_height="match_parent"
                                        android:background="@color/whitecolor"
                                        android:src="@drawable/attach2"
                                        android:visibility="visible"
                                        android:layout_gravity="center"
                                        tools:ignore="ContentDescription" />


                                    <ImageView
                                        android:id="@+id/fatherAadharCardImageBack"
                                        android:layout_width="@dimen/dimen70dp"
                                        android:layout_height="match_parent"
                                        android:background="@color/whitecolor"
                                        android:visibility="gone"
                                        android:layout_gravity="center"
                                        tools:ignore="ContentDescription" />

                                </android.support.v7.widget.CardView>
                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            style="@style/LinearLayoutStyle"
                            android:orientation="horizontal"
                            android:baselineAligned="false">

                            <LinearLayout
                                style="@style/LinearlayoutWeightStyle"
                                android:layout_weight="0.8"
                                android:gravity="center">

                                <android.support.design.widget.TextInputLayout
                                    style="@style/TextInputLayout">
                                    <EditText
                                        android:id="@+id/father_current_address"
                                        style="@style/EditTextStyle"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:inputType="textCapCharacters"
                                        android:maxLength="15"
                                        android:hint="@string/attach_current_address_proof"
                                        android:layout_gravity="center"
                                        android:digits="@string/alphabetNumeric"/>

                                </android.support.design.widget.TextInputLayout>
                            </LinearLayout>




                            <LinearLayout
                                style="@style/LinearlayoutWeightStyle"
                                android:layout_weight="0.5"
                                android:gravity="center">

                                <android.support.v7.widget.CardView
                                    android:layout_width="@dimen/dimen50dp"
                                    android:layout_height="70dp"
                                    android:layout_margin="@dimen/mar_padd_10dp">

                                    <ImageView
                                        android:id="@+id/fatherCurrentAddressProofFrontClick"
                                        android:layout_width="40dp"
                                        android:layout_height="match_parent"
                                        android:background="@color/whitecolor"
                                        android:src="@drawable/attach2"
                                        android:visibility="visible"
                                        tools:ignore="ContentDescription" />

                                    <ImageView
                                        android:id="@+id/fatherCurrentAddressProofFront"
                                        android:layout_width="@dimen/dimen70dp"
                                        android:layout_height="match_parent"
                                        android:background="@color/whitecolor"
                                        android:visibility="gone"
                                        android:layout_gravity="center"
                                        tools:ignore="ContentDescription" />

                                </android.support.v7.widget.CardView>


                                <android.support.v7.widget.CardView
                                    android:layout_width="@dimen/dimen50dp"
                                    android:layout_height="70dp"
                                    android:layout_margin="@dimen/mar_padd_10dp">

                                    <ImageView
                                        android:id="@+id/fatherCurrentAddressProofBackClick"
                                        android:layout_width="40dp"
                                        android:layout_height="match_parent"
                                        android:background="@color/whitecolor"
                                        android:src="@drawable/attach2"
                                        android:visibility="visible"
                                        tools:ignore="ContentDescription" />

                                    <ImageView
                                        android:id="@+id/fatherCurrentAddressProofBack"
                                        android:layout_width="@dimen/dimen70dp"
                                        android:layout_height="match_parent"
                                        android:background="@color/whitecolor"
                                        android:visibility="gone"
                                        android:layout_gravity="center"
                                        tools:ignore="ContentDescription" />

                                </android.support.v7.widget.CardView>

                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>
        </LinearLayout>



        <LinearLayout
            style="@style/LinearLayoutStyle"
            android:orientation="vertical"
            android:id="@+id/linearLayout_mother">
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="@dimen/mar_padd_5dp"
                app:cardCornerRadius="@dimen/mar_padd_5dp"
                android:layout_margin="@dimen/mar_padd_5dp">


                <RelativeLayout
                    style="@style/RelativeLayoutStyle"
                    android:id="@+id/motherInfoLayoutClick">

                    <TextView
                        android:id="@+id/motherInfoTextView"
                        style="@style/TextViewStyle1"
                        android:text="@string/mother_information"
                        android:textSize="@dimen/text20sp"
                        android:layout_height="@dimen/dimen40dp"
                        android:textColor="@color/whitecolor"
                        android:background="@color/colorPrimary"/>

                    <ImageView
                        android:id="@+id/btnimageViewDownForMother"
                        style="@style/ImageviewStyle"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:contentDescription="@string/clickbutton"
                        android:src="@drawable/ic_expand_more_black_24dp"/>

                    <ImageView
                        android:id="@+id/btnimageViewUpForMother"
                        style="@style/ImageviewStyle"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:visibility="gone"
                        android:src="@drawable/ic_expand_less_black_24dp"
                        android:contentDescription="@string/clickbutton" />

                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/layoutForMother"
                    style="@style/LinearLayoutStyle"
                    android:orientation="vertical"
                    android:visibility="gone"
                    android:layout_marginTop="40dp"
                    android:padding="@dimen/mar_padd_5dp">

                    <in.varadhismartek.pathshalaerp.CircleImageView
                        android:id="@+id/mother_image"
                        style="@style/CircleImageViewStyle"
                        android:layout_marginStart="@dimen/mar_padd_5dp"
                        android:contentDescription="@string/studentimage"
                        android:background="@drawable/attach2"
                        />

                    <LinearLayout
                        style="@style/LinearLayoutStyle"
                        android:orientation="vertical"
                        android:baselineAligned="false"
                        android:layout_marginTop="@dimen/mar_padd_5dp">

                        <android.support.design.widget.TextInputLayout
                            style="@style/TextInputLayout">

                            <EditText
                                android:id="@+id/editText_motherName"
                                style="@style/EditTextStyle"
                                android:hint="@string/first_name"
                                android:maxLength="25"
                                android:inputType="textCapSentences"
                                android:digits="@string/alphabet"/>

                        </android.support.design.widget.TextInputLayout>


                        <android.support.design.widget.TextInputLayout
                            style="@style/TextInputLayout">

                            <EditText
                                android:id="@+id/editText_MotherMiddleName"
                                style="@style/EditTextStyle"
                                android:hint="@string/middle_name"
                                android:maxLength="25"
                                android:inputType="textCapSentences"
                                android:digits="@string/alphabet"/>

                        </android.support.design.widget.TextInputLayout>

                        <android.support.design.widget.TextInputLayout
                            style="@style/TextInputLayout">

                            <EditText
                                android:id="@+id/editText_MotherLastName"
                                style="@style/EditTextStyle"
                                android:hint="@string/last_name"
                                android:maxLength="25"
                                android:inputType="textCapSentences"
                                android:digits="@string/alphabet"/>

                        </android.support.design.widget.TextInputLayout>

                    </LinearLayout>

                    <LinearLayout
                        style="@style/LinearLayoutStyle"
                        android:orientation="horizontal">

                        <android.support.design.widget.TextInputLayout
                            style="@style/TextInputLayout"
                            android:layout_weight="1"
                            android:layout_width="0dp">

                            <EditText
                                android:id="@+id/editText_motherAge"
                                style="@style/EditTextStyle"
                                android:inputType="number"
                                android:hint="@string/select_date_of_birth" />

                        </android.support.design.widget.TextInputLayout>


                        <ImageView
                            style="@style/ImageviewStyle"
                            android:id="@+id/calendarMother"
                            android:src="@drawable/ic_calendar"
                            android:visibility="visible"
                            android:layout_gravity="center"
                            android:contentDescription="@string/calendarfordob" />

                    </LinearLayout>

                    <LinearLayout
                        style="@style/LinearLayoutStyle"
                        android:orientation="horizontal"
                        android:baselineAligned="false"
                        tools:ignore="TooManyViews">

                        <LinearLayout
                            style="@style/LinearlayoutWeightStyle"
                            tools:ignore="TooManyViews">

                            <android.support.design.widget.TextInputLayout
                                style="@style/TextInputLayout">

                                <EditText
                                    android:id="@+id/editText_motherMobileNumber"
                                    android:inputType="number"
                                    style="@style/EditTextStyle"
                                    android:hint="@string/mother_mobile_number"
                                    android:maxLength="10"/>

                            </android.support.design.widget.TextInputLayout>
                        </LinearLayout>

                        <LinearLayout
                            style="@style/LinearlayoutWeightStyle">

                            <Spinner
                                android:background="@drawable/custom_spinner_background"
                                android:spinnerMode="dropdown"
                                android:id="@+id/spinnerForMotherQualification"
                                android:layout_gravity="center"
                                style="@style/SpinnerStyleA" />


                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        style="@style/LinearLayoutStyle"
                        android:orientation="horizontal"
                        android:baselineAligned="false">

                        <LinearLayout
                            style="@style/LinearlayoutWeightStyle">

                            <Spinner
                                android:background="@drawable/custom_spinner_background"
                                android:spinnerMode="dropdown"
                                android:id="@+id/spinnerForMotherOccupation"
                                android:layout_gravity="center"
                                style="@style/SpinnerStyleA"/>
                        </LinearLayout>

                        <LinearLayout
                            style="@style/LinearlayoutWeightStyle">

                            <android.support.design.widget.TextInputLayout
                                style="@style/TextInputLayout">

                                <EditText
                                    android:id="@+id/editText_motherDesignation"
                                    style="@style/EditTextStyle"
                                    android:hint="@string/designation"
                                    android:focusableInTouchMode="false"
                                    android:focusable="false"
                                    android:maxLength="20"
                                    android:digits="@string/alphabetSpace"/>

                            </android.support.design.widget.TextInputLayout>

                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        style="@style/LinearLayoutStyle"
                        android:orientation="horizontal"
                        android:baselineAligned="false">

                        <android.support.design.widget.TextInputLayout
                            style="@style/TextInputLayout"
                            android:layout_weight="1"
                            android:layout_width="0dp">

                            <EditText
                                android:id="@+id/editText_motherEmailId"
                                style="@style/EditTextStyle"
                                android:hint="@string/mother_email_id"
                                android:maxLength="40"
                                tools:ignore="TextFields"
                                android:digits="@string/email"/>

                        </android.support.design.widget.TextInputLayout>
                    </LinearLayout>

                    <LinearLayout
                        style="@style/LinearLayoutStyle"
                        android:orientation="vertical">

                        <LinearLayout
                            style="@style/LinearLayoutStyle"
                            android:orientation="horizontal"
                            android:baselineAligned="false">

                            <LinearLayout
                                style="@style/LinearlayoutWeightStyle"
                                android:layout_weight="0.8"
                                android:gravity="center"
                                android:baselineAligned="false">

                                <android.support.design.widget.TextInputLayout
                                    style="@style/TextInputLayout"
                                    android:layout_weight="1"
                                    tools:ignore="NestedWeights"
                                    android:layout_width="0dp">
                                    <EditText
                                        android:id="@+id/editText_motherAdharCardNumber"
                                        style="@style/EditTextStyle"
                                        android:hint="@string/aadhar_card_number"
                                        android:inputType="number"
                                        android:maxLength="12"/>

                                </android.support.design.widget.TextInputLayout>
                            </LinearLayout>

                            <LinearLayout
                                style="@style/LinearlayoutWeightStyle"
                                android:layout_weight="0.5"
                                android:gravity="center">


                                <android.support.v7.widget.CardView
                                    style="@style/cardViewStyleA">

                                    <ImageView
                                        android:id="@+id/motherAadharCardImageFrontClick"
                                        android:layout_width="40dp"
                                        android:layout_height="match_parent"
                                        android:background="@color/whitecolor"
                                        android:src="@drawable/attach2"
                                        android:visibility="visible"
                                        android:layout_gravity="center"
                                        tools:ignore="ContentDescription" />


                                    <ImageView
                                        android:id="@+id/motherAadharCardImageFront"
                                        android:layout_width="@dimen/dimen70dp"
                                        android:layout_height="match_parent"
                                        android:background="@color/whitecolor"
                                        android:visibility="gone"
                                        android:layout_gravity="center"
                                        tools:ignore="ContentDescription" />



                                </android.support.v7.widget.CardView>


                                <android.support.v7.widget.CardView
                                    style="@style/cardViewStyleA">

                                    <ImageView
                                        android:id="@+id/motherAadharCardImageBackClick"
                                        android:layout_width="40dp"
                                        android:layout_height="match_parent"
                                        android:background="@color/whitecolor"
                                        android:src="@drawable/attach2"
                                        android:visibility="visible"
                                        android:layout_gravity="center"
                                        tools:ignore="ContentDescription" />


                                    <ImageView
                                        android:id="@+id/motherAadharCardImageBack"
                                        android:layout_width="@dimen/dimen70dp"
                                        android:layout_height="match_parent"
                                        android:background="@color/whitecolor"
                                        android:visibility="gone"
                                        android:layout_gravity="center"
                                        tools:ignore="ContentDescription" />

                                </android.support.v7.widget.CardView>

                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            style="@style/LinearLayoutStyle"
                            android:orientation="horizontal"
                            android:baselineAligned="false">

                            <LinearLayout
                                style="@style/LinearlayoutWeightStyle"
                                android:layout_weight="0.8"
                                android:gravity="center">

                                <android.support.design.widget.TextInputLayout
                                    style="@style/TextInputLayout">
                                    <EditText
                                        android:id="@+id/mother_current_address"
                                        style="@style/EditTextStyle"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:inputType="textCapCharacters"
                                        android:hint="@string/attach_current_address_proof"
                                        android:layout_gravity="center"
                                        android:maxLength="15"
                                        android:digits="@string/alphabetNumeric"/>

                                </android.support.design.widget.TextInputLayout>
                            </LinearLayout>

                            <LinearLayout
                                style="@style/LinearlayoutWeightStyle"
                                android:layout_weight="0.5"
                                android:gravity="center">


                                <android.support.v7.widget.CardView
                                    style="@style/cardViewStyleA">

                                    <ImageView
                                        android:id="@+id/motherCurrentAddressProofFrontClick"
                                        android:layout_width="40dp"
                                        android:layout_height="match_parent"
                                        android:background="@color/whitecolor"
                                        android:src="@drawable/attach2"
                                        android:visibility="visible"
                                        android:layout_gravity="center"
                                        tools:ignore="ContentDescription" />

                                    <ImageView
                                        android:id="@+id/motherCurrentAddressProofFront"
                                        android:layout_width="@dimen/dimen70dp"
                                        android:layout_height="match_parent"
                                        android:background="@color/whitecolor"
                                        android:visibility="gone"
                                        android:layout_gravity="center"
                                        tools:ignore="ContentDescription" />

                                </android.support.v7.widget.CardView>


                                <android.support.v7.widget.CardView
                                    style="@style/cardViewStyleA">

                                    <ImageView
                                        android:id="@+id/motherCurrentAddressProofBackClick"
                                        android:layout_width="40dp"
                                        android:layout_height="match_parent"
                                        android:background="@color/whitecolor"
                                        android:src="@drawable/attach2"
                                        android:visibility="visible"
                                        android:layout_gravity="center"
                                        tools:ignore="ContentDescription" />


                                    <ImageView
                                        android:id="@+id/motherCurrentAddressProofBack"
                                        android:layout_width="@dimen/dimen70dp"
                                        android:layout_height="match_parent"
                                        android:background="@color/whitecolor"
                                        android:visibility="gone"
                                        android:layout_gravity="center"
                                        tools:ignore="ContentDescription" />

                                </android.support.v7.widget.CardView>
                            </LinearLayout>

                        </LinearLayout>


                    </LinearLayout>
                </LinearLayout>

            </android.support.v7.widget.CardView>
        </LinearLayout>



        <LinearLayout
            style="@style/LinearLayoutStyle"
            android:orientation="vertical">
            <android.support.v7.widget.CardView
                style="@style/cardViewStyle"
                app:cardCornerRadius="@dimen/mar_padd_5dp"
                app:cardElevation="@dimen/mar_padd_5dp"
                android:layout_margin="@dimen/mar_padd_5dp">

                <RelativeLayout
                    style="@style/RelativeLayoutStyle"
                    android:id="@+id/guardiansInfoLayoutClick">

                    <TextView
                        android:id="@+id/guardiansInfoTextView"
                        style="@style/TextViewStyle1"
                        android:text="@string/guardians_information"
                        android:textSize="@dimen/text20sp"
                        android:layout_height="@dimen/dimen40dp"
                        android:textColor="@color/whitecolor"
                        android:background="@color/colorPrimary"/>

